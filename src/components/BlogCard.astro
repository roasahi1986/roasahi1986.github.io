---
interface Props {
  title: string;
  description: string;
  date: Date;
  slug: string;
  basePath?: string;
}

const { title, description, date, slug, basePath = '/blog' } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="group">
  <a href={`${basePath}/${slug}`} class="block glass glass-hover rounded-xl p-6">
    <time class="text-xs text-dark-muted">{formattedDate}</time>
    <h3 class="text-xl font-semibold text-dark-text mt-2 mb-2 group-hover:text-dark-accent transition-colors">
      {title}
    </h3>
    <p class="text-dark-muted text-sm line-clamp-2">
      {description}
    </p>
    <span class="inline-block mt-4 text-sm text-dark-accent">
      Read more â†’
    </span>
  </a>
</article>
