---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/blog', label: 'Blog' },
];

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/[0.02] backdrop-blur-xl border-b border-white/[0.06]" style="box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);">
  <nav class="max-w-5xl mx-auto px-6 h-16 flex items-center justify-between">
    <a href="/" class="text-xl font-bold text-dark-text hover:text-dark-accent transition-colors">
      Ro Asahi - 盧旭 -
    </a>
    <ul class="flex items-center gap-8">
      {navLinks.map((link) => (
        <li>
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium transition-colors',
              currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
                ? 'text-dark-accent'
                : 'text-dark-muted hover:text-dark-text',
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>
